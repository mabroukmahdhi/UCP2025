<div class="cn-page cn-attendees-page">
    <!-- Header / Hero -->
    <section class="cn-attendees-hero">
        <div class="cn-attendees-hero-inner">
            <h2 class="cn-attendees-hero-title">
                Attendees
            </h2>
            <p class="cn-attendees-hero-text">
                Browse and manage all conference attendees. Search, filter, and quickly access key contact details.
            </p>
            <div class="cn-attendees-hero-divider"></div>
        </div>
    </section>

    <!-- Toolbar -->
    <section class="cn-attendees-toolbar-section">
        <div class="cn-attendees-toolbar">
            <div class="cn-attendees-search">
                <i class="fa-solid fa-magnifying-glass cn-attendees-search-icon"></i>
                <input class="cn-attendees-search-input"
                       placeholder="Search by name, company, role, or email..."
                       @bind="SearchText"
                       @bind:event="oninput" />
            </div>

            <div class="cn-attendees-stats">
                <div class="cn-attendees-stat-item">
                    <span class="cn-attendees-stat-label">Total</span>
                    <span class="cn-attendees-stat-value">@Attendees.Count</span>
                </div>
                <div class="cn-attendees-stat-item">
                    <span class="cn-attendees-stat-label">Visible</span>
                    <span class="cn-attendees-stat-value">@FilteredAttendees.Count</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Attendees Table -->
    <section class="cn-attendees-table-section">
        <div class="cn-attendees-table-wrapper">
            <table class="cn-attendees-table">
                <thead>
                    <tr class="cn-attendees-table-header-row">
                        <th class="cn-attendees-table-header-cell cn-attendees-col-name">Name</th>
                        <th class="cn-attendees-table-header-cell cn-attendees-col-company">Company</th>
                        <th class="cn-attendees-table-header-cell cn-attendees-col-role">Role</th>
                        <th class="cn-attendees-table-header-cell cn-attendees-col-email">Email</th>
                        <th class="cn-attendees-table-header-cell cn-attendees-col-tag">Tag</th>
                    </tr>
                </thead>
                <tbody>
                    @if (FilteredAttendees.Count == 0)
                    {
                        <tr class="cn-attendees-table-empty-row">
                            <td class="cn-attendees-table-empty-cell" colspan="5">
                                <div class="cn-attendees-empty-state">
                                    <i class="fa-regular fa-face-frown cn-attendees-empty-icon"></i>
                                    <p class="cn-attendees-empty-text">
                                        No attendees match your search. Try adjusting your filters.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var attendee in FilteredAttendees)
                        {
                            <tr class="cn-attendees-table-row">
                                <td class="cn-attendees-table-cell cn-attendees-cell-name">
                                    <div class="cn-attendees-name-wrapper">
                                        <div class="cn-attendees-avatar">
                                            <span class="cn-attendees-avatar-initials">
                                                @attendee.Initials
                                            </span>
                                        </div>
                                        <div class="cn-attendees-name-text">
                                            <span class="cn-attendees-name">@attendee.FullName</span>
                                            <span class="cn-attendees-location">@attendee.Location</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="cn-attendees-table-cell">
                                    <span class="cn-attendees-company">@attendee.Company</span>
                                </td>
                                <td class="cn-attendees-table-cell">
                                    <span class="cn-attendees-role">@attendee.Role</span>
                                </td>
                                <td class="cn-attendees-table-cell">
                                    <a href="mailto:@attendee.Email" class="cn-attendees-email">
                                        @attendee.Email
                                    </a>
                                </td>
                                <td class="cn-attendees-table-cell">
                                    <span class="cn-attendees-tag">
                                        @attendee.Tag
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

