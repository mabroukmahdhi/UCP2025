
<div class="survey-layout">
    <section class="survey-talks-section">
        <div class="survey-card">
            <div class="survey-card-header">
                <h2 class="survey-card-title">Conference Talks</h2>
                <div class="survey-card-header-right">
                    <select class="survey-select"
                            @bind="SelectedTrackFilter">
                        <option>All Tracks</option>
                        <option>Technical</option>
                        <option>Business</option>
                        <option>Design</option>
                    </select>

                    <div class="survey-talks-count">
                        <span class="survey-talks-count-number">@TotalTalks</span>
                        <span class="survey-talks-count-text">talks available</span>
                    </div>
                </div>
            </div>

            <div class="survey-talks-list">
                @foreach (var talk in FilteredTalks)
                {
                    <article class="survey-talk-row">
                        <div class="survey-talk-row-main">
                            <div class="survey-talk-meta">
                                <span class="survey-track-pill @GetTrackClass(talk.Track)">
                                    @talk.Track
                                </span>
                                <span class="survey-talk-meta-text">@talk.Time</span>
                                <span class="survey-talk-meta-text">@talk.Room</span>
                            </div>

                            <h3 class="survey-talk-title">@talk.Title</h3>

                            <p class="survey-talk-description">
                                @talk.Description
                            </p>

                            <div class="survey-talk-footer">
                                <div class="survey-speaker">
                                    <img class="survey-speaker-avatar"
                                         src="@talk.SpeakerAvatarUrl"
                                         alt="@talk.Speaker" />
                                    <span class="survey-speaker-name">@talk.Speaker</span>
                                </div>

                                <div class="survey-rating-summary">
                                    <div class="survey-stars-readonly">
                                        @for (var starIndex = 1; starIndex <= 5; starIndex++)
                                        {
                                            <i class="@GetAverageStarIconClass(talk.AverageRating, starIndex) survey-star-readonly-icon"></i>
                                        }
                                    </div>
                                    <span class="survey-rating-text">
                                        @GetAverageRatingText(talk)
                                    </span>
                                </div>
                            </div>
                        </div>

                        <button type="button"
                                class="survey-rate-button"
                                @onclick="() => OpenRatingModal(talk)">
                            <i class="fa-solid fa-star survey-rate-button-icon"></i>
                            <span>Rate Talk</span>
                        </button>
                    </article>
                }
            </div>
        </div>
    </section>

    <aside class="survey-sidebar">
        <div class="survey-card survey-sidebar-card">
            <h3 class="survey-sidebar-title">Survey Progress</h3>
            <div class="survey-progress-content">
                <div class="survey-progress-row">
                    <span class="survey-progress-label">Talks Rated</span>
                    <span class="survey-progress-value">@RatedTalks of @TotalTalks</span>
                </div>
                <div class="survey-progress-bar-outer">
                    <div class="survey-progress-bar-inner"
                         style="width: @ProgressPercentString"></div>
                </div>
                <p class="survey-progress-hint">
                    Complete your survey to receive a certificate of participation.
                </p>
            </div>
        </div>

        <div class="survey-card survey-sidebar-card">
            <h3 class="survey-sidebar-title">Recent Ratings</h3>

            @if (RecentRatings.Count == 0)
            {
                <p class="survey-empty-recent">
                    No ratings yet. Start by rating a talk.
                </p>
            }
            else
            {
                <div class="survey-recent-list">
                    @foreach (var rating in RecentRatings)
                    {
                        <div class="survey-recent-item">
                            <div class="survey-recent-main">
                                <p class="survey-recent-title">@rating.TruncatedTitle</p>
                                <div class="survey-stars-readonly survey-recent-stars">
                                    @for (var starIndex = 1; starIndex <= 5; starIndex++)
                                    {
                                        <i class="@GetAverageStarIconClass(rating.Rating, starIndex) survey-star-readonly-icon"></i>
                                    }
                                </div>
                            </div>
                            <span class="survey-recent-score">
                                @rating.Rating.ToString("0")/5
                            </span>
                        </div>
                    }
                </div>
            }
        </div>
    </aside>
</div>

@if (IsModalOpen)
{
    <div class="survey-modal-overlay">
        <div class="survey-modal">
            <div class="survey-modal-header">
                <h3 class="survey-modal-title">Rate This Talk</h3>
                <button type="button"
                        class="survey-modal-close"
                        @onclick="CloseRatingModal">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>

            <div class="survey-modal-talk">
                <h4 class="survey-modal-talk-title">@CurrentTalkTitle</h4>
                <p class="survey-modal-speaker">@CurrentSpeakerName</p>
            </div>

            <div class="survey-modal-section">
                <label class="survey-label">Overall Rating</label>
                <div class="survey-modal-rating-row">
                    <div class="survey-modal-stars">
                        @for (var starIndex = 1; starIndex <= 5; starIndex++)
                        {
                            <button type="button"
                                    class="survey-star-button"
                                    @onclick="() => SetRating(starIndex)">
                                <i class="@GetInteractiveStarIconClass(starIndex)"></i>
                            </button>
                        }
                    </div>
                    <span class="survey-modal-rating-text">
                        @RatingLabel
                    </span>
                </div>
            </div>

            <div class="survey-modal-section">
                <label class="survey-label">Comments (Optional)</label>
                <textarea class="survey-textarea"
                      rows="4"
                      @bind="CommentText"
                      placeholder="Share your thoughts about this talk...">
                </textarea>
            </div>

            <div class="survey-modal-actions">
                <button type="button"
                        class="survey-button-secondary"
                        @onclick="CloseRatingModal">
                    Cancel
                </button>
                <button type="button"
                        class="survey-button-primary"
                        @onclick="SubmitRating">
                    Submit Rating
                </button>
            </div>
        </div>
    </div>
}

